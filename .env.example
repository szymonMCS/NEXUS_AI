# NEXUS AI - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# === APPLICATION SETTINGS ===
APP_NAME=NEXUS AI
APP_VERSION=2.0.0
APP_MODE=lite  # "lite" (darmowe źródła) lub "pro" (płatne API)
DEBUG=False
LOG_LEVEL=INFO

# === DATABASE ===
DATABASE_URL=sqlite:///./nexus.db
# For PostgreSQL: postgresql://user:password@localhost:5432/nexus
REDIS_URL=redis://localhost:6379/0

# === API KEYS - NEWS SOURCES ===
# Brave i Serper: darmowe limity (2000/2500 req/miesiąc) - wystarczające dla Lite
BRAVE_API_KEY=your_brave_api_key_here
SERPER_API_KEY=your_serper_api_key_here
# NewsAPI: tylko dla Pro mode
NEWSAPI_KEY=your_newsapi_key_here

# === API KEYS - SPORTS DATA (PRO MODE) ===
# Te API są płatne i używane tylko w trybie Pro
ODDS_API_KEY=your_odds_api_key_here
API_TENNIS_KEY=your_api_tennis_key_here
BETS_API_KEY=your_bets_api_key_here

# === API-SPORTS FREE TIER (LITE MODE - opcjonalne) ===
# 100 requests/day per API - wystarczające dla testów
# API_SPORTS_BASKETBALL_KEY=your_free_key_here
# API_SPORTS_TENNIS_KEY=your_free_key_here

# === API KEYS - LLM ===
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# === SYSTEM CONFIGURATION (PRO MODE) ===
RUN_EVERY_N_MINUTES=30
ENABLE_LIVE_ODDS=False
MAX_CONCURRENT_REQUESTS=10

# === LITE MODE CONFIGURATION ===
USE_WEB_SCRAPING=True  # Używaj web scrapingu (Sofascore, Flashscore, PL bookies)
USE_FREE_APIS=True     # Używaj darmowych API (TheSportsDB)
ENABLE_CACHE=True      # Cache wyników scrapingu
CACHE_TTL_HOURS=1      # Jak długo cache jest ważny

# === OPTIONAL - Sentry Monitoring ===
# SENTRY_DSN=your_sentry_dsn_here
