# NEXUS AI - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# === APPLICATION SETTINGS ===
APP_NAME=NEXUS AI
APP_VERSION=2.0.0
APP_MODE=lite  # "lite" (darmowe źródła) lub "pro" (płatne API)
DEBUG=False
LOG_LEVEL=INFO

# === DATABASE ===
DATABASE_URL=sqlite:///./nexus.db
# For PostgreSQL (Docker): postgresql://nexus:nexus_secret@postgres:5432/nexus
# For PostgreSQL (local): postgresql://user:password@localhost:5432/nexus
POSTGRES_USER=nexus
POSTGRES_PASSWORD=nexus_secret_change_me
POSTGRES_DB=nexus
POSTGRES_PORT=5432
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# === API KEYS - NEWS SOURCES ===
# Brave i Serper: darmowe limity (2000/2500 req/miesiąc) - wystarczające dla Lite
BRAVE_API_KEY=your_brave_api_key_here
SERPER_API_KEY=your_serper_api_key_here
# NewsAPI: tylko dla Pro mode
NEWSAPI_KEY=your_newsapi_key_here

# === API KEYS - SPORTS DATA (PRO MODE) ===
# Te API są płatne i używane tylko w trybie Pro
ODDS_API_KEY=your_odds_api_key_here
API_TENNIS_KEY=your_api_tennis_key_here
BETS_API_KEY=your_bets_api_key_here

# === API-SPORTS FREE TIER (LITE MODE - opcjonalne) ===
# 100 requests/day per API - wystarczające dla testów
# API_SPORTS_BASKETBALL_KEY=your_free_key_here
# API_SPORTS_TENNIS_KEY=your_free_key_here

# === API KEYS - LLM ===
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# === SYSTEM CONFIGURATION (PRO MODE) ===
RUN_EVERY_N_MINUTES=30
ENABLE_LIVE_ODDS=False
MAX_CONCURRENT_REQUESTS=10

# === LITE MODE CONFIGURATION ===
USE_WEB_SCRAPING=True  # Używaj web scrapingu (Sofascore, Flashscore, PL bookies)
USE_FREE_APIS=True     # Używaj darmowych API (TheSportsDB)
ENABLE_CACHE=True      # Cache wyników scrapingu
CACHE_TTL_HOURS=1      # Jak długo cache jest ważny

# === OPTIONAL - Sentry Monitoring ===
# SENTRY_DSN=your_sentry_dsn_here

# === DOCKER CONFIGURATION ===
API_PORT=8000
FRONTEND_PORT=3000
NEXUS_MODE=lite
NEXUS_ENV=development

# === BETTING CONFIGURATION ===
DEFAULT_BANKROLL=1000
KELLY_FRACTION=0.25
MAX_STAKE_PERCENT=0.05
MAX_DAILY_STAKE_PERCENT=0.20
MIN_EDGE_POPULAR=0.03
MIN_EDGE_MEDIUM=0.05
MIN_EDGE_UNPOPULAR=0.07

# === SECURITY ===
SECRET_KEY=your_secret_key_change_me_in_production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
